<form method="post" action="{{ path('app_text_delete', {'id': text.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ text.id) }}">
    <button class="uk-button uk-button-danger uk-border-pill uk-button-small">Supprimer</button>
</form>
