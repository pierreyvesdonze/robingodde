{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
<div class="uk-container uk-margin-large-top uk-flex uk-flex-center">
    <div class="uk-width-1-3@m uk-width-2-3@s">
        <h1 class="uk-text-center uk-margin-medium-bottom">S'enregistrer</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'uk-form-stacked uk-card uk-card-default uk-card-body uk-box-shadow-small uk-border-rounded'}}) }}
            
            <div class="uk-margin">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                <div class="uk-form-controls">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'uk-input uk-border-rounded', 'placeholder': 'Email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>

            <div class="uk-margin">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'uk-form-label'}}) }}
                <div class="uk-form-controls">
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'uk-input uk-border-rounded', 'placeholder': 'Password'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>

            <div class="uk-margin uk-text-center">
                <button type="submit" class="uk-button uk-button-default uk-border-pill uk-box-shadow-small">
                    Validation
                </button>
            </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
